<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bac"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5a3f7"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/idITEMidentificador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvNombreCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvProvincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNombreCiudad"
        android:layout_alignStart="@+id/tvNombreCiudad"
        android:layout_below="@+id/tvNombreCiudad"

        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvHaesbitant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvProvincia"
        android:layout_alignRight="@+id/tvProvincia"
        android:layout_below="@+id/tvProvincia"

        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="==========================================" />
</LinearLayout>