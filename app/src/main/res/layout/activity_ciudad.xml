<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.cristobal.persistenciasqlite.CiudadActivity">

    <TextView
        android:id="@+id/idTTXTidCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <EditText
        android:id="@+id/idETciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/idETProvincia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/idETHabitantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp" />

    <Button
        android:id="@+id/idBTNcancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="volverListado"
        android:text="cancelar" />

    <Button
        android:id="@+id/idBTNmodificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="modificarCiudad"
        android:text="modificar" />

    <Button
        android:id="@+id/idVolverListado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="volverListado"
        android:text="volver listado" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="borrar"
        android:text="borrar" />

</LinearLayout>
