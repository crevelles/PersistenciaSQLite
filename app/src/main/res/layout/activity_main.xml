<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cristobal.persistenciasqlite.MainActivity">

    <Button
        android:id="@+id/btnVerCiudades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:onClick="verListado"
        android:text="Ver Ciudades" />

    <Button
        android:id="@+id/btnNuevaCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnVerCiudades"
        android:layout_marginTop="67dp"
        android:layout_weight="1"
        android:onClick="nuevaCiudad"
        android:text="Nueva ciudad" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Seleccione una opciÃ³n:"
        android:textAlignment="center"
        android:textSize="24sp" />

</RelativeLayout>
